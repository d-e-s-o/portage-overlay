@@ -426,7 +426,22 @@ sub tab_key_press {
       }
       elsif ($keysym == $key_n)
       {
-         $self->new_tab;
+         # on Linux /proc/<pid>/cwd is a symlink pointing to the current working directory of the
+         # process with id <pid>
+         my $cwd = "/proc/" . $self->{cur}->get_pid() . "/cwd";
+
+         if (-l $cwd)
+         {
+            my @argv;
+            push(@argv, "-cd");
+            push(@argv, readlink($cwd));
+
+            $self->new_tab (@argv);
+         }
+         else
+         {
+            $self->new_tab;
+         }
          return 1;
       }
       elsif (exists $tab_index{$keysym})
